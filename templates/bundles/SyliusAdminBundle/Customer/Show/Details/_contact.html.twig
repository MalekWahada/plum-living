<div class="extra content">
    <a href="mailto:{{ customer.email }}">
        <i class="envelope icon"></i> {{ customer.email }}
    </a>
    {% if customer.phoneNumber is not null %}
        <div id="phone-number">
            <i class="phone icon"></i> {{ customer.phoneNumber|phone_number_parse|phone_number_format('INTERNATIONAL') }}
        </div>
    {% endif %}
</div>
