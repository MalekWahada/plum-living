{% if data.paymentState is constant("Sylius\\Component\\Core\\OrderPaymentStates::STATE_PAID") %}
    {% if data.erpRegistered is not null %}
        <span class="ui basic label">
            <i class="checkmark icon"></i>
            {{ 'sylius.ui.yes_label'|trans }}
        </span>
    {% else %}
        <span class="ui basic red label">
            <i class="remove icon"></i>
            {{ 'sylius.ui.no_label'|trans }}
        </span>
    {% endif %}
{% endif %}
