<fieldset class="checkout-payment-payment form-section">
    {% if loop.length > 1 %}
        <legend class="form-section__title t-label-small">{{ 'app.ui.generic.payment'|trans }} {{ loop.index }}</legend>
    {% endif %}
    <div class="field-group" {{ sylius_test_html_attribute('shipments') }}>
        {% include 'Shop/Form/_errors.html.twig' with { 'form': form.method } %}
        {% for key, choice_form in form.method %}
            {% include '@SyliusShop/Checkout/SelectPayment/_choice.html.twig' with {
                'form': choice_form,
                'method': form.method.vars.choices[key].data
            } %}
        {% else %}
            {% include '@SyliusShop/Checkout/SelectPayment/_unavailable.html.twig' %}
        {% endfor %}
    </div>
</fieldset>
