{% extends '@SyliusShop/layout.html.twig' %}

{% form_theme form '@SyliusShop/Form/theme.html.twig' %}

{% block title %}{{ 'sylius.ui.reset_password'|trans }} | {{ parent() }}{% endblock %}

{% block content %}
    <div class="container container--compact">
        {{ sylius_template_event('sylius.shop.request_password_reset_token.after_content_header') }}
        <div class="panel panel--big-chin panel--big-cheeks">
            <h1 class="panel__title t-header-medium">{{ 'app.ui.login_register.reset_of_your_password'|trans }}</h1>
            {{ form_start(form, {'action': path('sylius_shop_request_password_reset_token')}) }}

                {% include 'Shop/Form/_text_field.html.twig' with { 'field': form.email, 'attributes': { 'type': 'email' } } %}

                {{ sylius_template_event('sylius.shop.request_password_reset_token.form', {'form': form}) }}
                
                <a class="cancel-button c-grey-light" href="{{ path('sylius_shop_login') }}">{{ 'app.ui.generic.cancel'|trans }}</a>

                <button type="submit" class="big-honking-submit" {{ sylius_test_html_attribute('request-password-reset-button') }}>{{ 'sylius.ui.reset'|trans }}</button>
            
            {{ form_row(form._token) }}
            {{ form_end(form, {'render_rest': false}) }}
        </div>
    </div>
{% endblock %}
