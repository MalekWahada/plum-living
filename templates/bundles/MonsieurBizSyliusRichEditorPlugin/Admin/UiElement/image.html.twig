{#
UI Element template
type: image
element fields :
    image
    alt
    title
    link
#}
{% if element.image is defined and element.image is not empty %}
    <p>
        {% if element.link is not empty %}
            <a href="{{ element.link }}">
                <img class="ui fluid image" src="{{ element.image|imagine_filter('app_cms_image') }}" alt="{{ element.alt|default('') }}" title="{{ element.title|default('') }}" />
            </a>
        {% else %}
            <img class="ui fluid image" src="{{ element.image|imagine_filter('app_cms_image') }}" alt="{{ element.alt|default('') }}" title="{{ element.title|default('') }}" />
        {% endif %}
    </p>
{% endif %}
