<h4>{{ ('app.ui.cms.image_collection.type_' ~ element.type)|trans }}</h4>

<div>
    {% for image in element.images %}
        <div class="">
            {% if image.image is defined and image.image is not null %}
                {% if image.link is not empty %}
                    <a href="{{ image.link }}">
                        <img class="" src="{{ image.image|imagine_filter('app_cms_image') }}"
                             alt="{{ image.alt|default('') }}"
                             title="{{ image.title|default('') }}"/>
                    </a>
                {% else %}
                    <img class="" src="{{ image.image|imagine_filter('app_cms_image') }}"
                         alt="{{ image.alt|default('') }}"
                         title="{{ image.title|default('') }}"/>
                {% endif %}
            {% endif %}
        </div>
    {% endfor %}
</div>
