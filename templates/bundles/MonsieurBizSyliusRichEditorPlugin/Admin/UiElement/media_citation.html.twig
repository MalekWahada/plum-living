<div class="ui grid {{ element.bg_color }}">
    {% if element.orientation == 'left' %}
        <div class="aligned eight wide column">
            <p>
                &laquo;
                {{ element.citation | raw }}
                &raquo;
            </p>
        </div>
        <div class="aligned eight wide column">
            <img src="{{ element.image | raw }}" width="100%"
                 alt="{{ element.image_alt | raw }}"
                 title="{{ element.image_title | raw }}">
        </div>
    {% else %}
        <div class="aligned eight wide column">
            <img src="{{ element.image | raw }}" width="100%"
                 alt="{{ element.image_alt | raw }}"
                 title="{{ element.image_title | raw }}">
        </div>
        <div class="aligned eight wide column">
            <p>
                &laquo;
                {{ element.citation | raw }}
                &raquo;
            </p>
        </div>
    {% endif %}
</div>
