{% set iconLibUrl = asset('build/shop/images/icon-lib.svg', 'shop') %}

<div class="home-project-creation-banner t-align-center">
    <div class="row u-relative">
        <div class="column-fill-space">
            <img src="{{ element.image | raw }}"
                 alt="{{ element.image_alt | raw }}"
                 title="{{ element.image_title | raw }}">
        </div>
        <div class="u-absolute">
            <h2 class="t-header-xlarge c-true-white t-shadow u-margin-b-2">{{ element.title | raw }}</h2>
            {% if element.description %}
                <p class="t-base-medium c-true-white">{{ element.description | raw }} <br>
            {% endif %}
            {% if element.link_label and element.link_url %}
                <a class="button button--small u-margin-t-3" style="border:none !important;"
                    {% if element.link_target %} target="{{ element.link_target }}"{% endif %}
                   href="{{ element.link_url | raw }}">
                    <svg class="o-icon-16 u-margin-r-2"><use xlink:href="{{ iconLibUrl }}#SVG-icon-arrow-right"/></svg>
                    {{ element.link_label | raw }}
                </a>
            {% endif %}
        </div>
    </div>
</div>
